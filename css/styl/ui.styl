list()
	list-style none
	margin 0
	padding 0
box()
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
nosel()
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none
placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}
clear()
	&:after
		display table
		content ""
		width 100%

img
	vertical-align top

*
	box()
	outline none
	&:before
	&:after
		box()

.hidden
	display none

// color
$red = #b5192e

// link
.a
	&-black
		color #000
	&-red
		color $red

.btn
	display inline-block
	vertical-align top
	border none
	text-decoration none
	position relative
	&-book
		width 300px
		height 80px
		font-size 20px
		line-height 24px
		font-family $regular
		color #000
		padding-top 18px
		text-align center
		text-transform uppercase
		&:before
			display block
			content ""
			border 3px solid #b5192e
			position absolute
			top 0
			right 0
			bottom 0
			left 0
		b
			display block
			font-weight normal
			font-family $bold
		&:hover
			box-shadow 0 0 20px rgba(0,0,0,0.3)

// carousel
.carousel
	margin-left auto
	margin-right auto
	position relative
	&-control
		display block
		nosel()
		cursor pointer
		width 50px
		height 13px
		position absolute
		top 50%
		z-index 1
		&:before
			display block
			content ""
			width 100%
			height 1px
			background-color #000
			position absolute
			top 6px
			left 0
			transition all .3s ease-out
		&:after
			display block
			content ""
			width 0
			height 0
			border-style solid
			border-color transparent
			position absolute
			top 0
			transition all .3s ease-out
		&:hover:before
			background-color #c54b46
	&-prev
		left 0
		&:after
			left -11px
			border-width 6px 10px 7px 10px
			border-right-color #000
		&:hover:after
			border-right-color #c54b46
	&-next
		right 0
		&:after
			right -11px
			border-width 7px 10px 6px 10px
			border-left-color #000
		&:hover:after
			border-left-color #c54b46






















